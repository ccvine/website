{.section items}

<div class="article-list hfeed">

{.repeated section @}

  <article class="{@|item-classes}" id="article-{id}" data-item-id="{id}">

    <!--POST HEADER-->
    <header>
      <div class="date">
        {.if title}
        <time class="published" datetime="{addedOn|date %F}">
          {addedOn|date %B %e, %Y}
        </time>
        {.or}
        <time class="published" datetime="{addedOn|date %F}">
          <a href="{fullUrl}">{addedOn|date %B %e, %Y}</a>
        </time>
        {.end}
      </div>
      {.if title}
      <h1 class="entry-title">
        {.passthrough?}
          <a href="{sourceUrl}">{title} <span>&rarr;</span></a>
        {.or}
          <a href="{fullUrl}">{title}</a>
        {.end}
      </h1>
      {.end}
      <p class="author-categories"><span class="blog-author">{.section author}by <a href="{collection.fullUrl}?author={id}">{displayName}</a>{.end}</span>{.section categories}<span class="categories"> in {.repeated section @}<a href="{collection.fullUrl}?category={@|url-encode}" rel="tag">{@}</a>{.alternates with}, {.end}</span>{.end}</p>
    </header>

    <hr class="short-line" />

    <div class="content-area">
      <!--SPECIAL CONTENT-->
      {.section promotedBlock}
        <div class="special-content">
         {@}
        </div>
      {.end}


      <!--POST BODY-->
      <div class="body entry-content">
        {.section promotedBlock}
          <div class="special-content-off">
           {@}
          </div>
        {.end}

      {.excerpt?}
        {excerpt}
        <a class="read-more" href="{fullUrl}">Read More</a>
      {.or}
        {.section body}{@}{.end}
        {.passthrough?}{.or}{.section sourceUrl}<div class="post-source">Source: <a href="{sourceUrl}" target="_blank">{sourceUrl|truncate 42}</a></div>{.end}{.end}
      {.end}
        <div class="sqs-post-entry">{postItemInjectCode}</div>
      </div>
    </div>

    <!--POST FOOTER-->
    <footer>
      <div class="">
        <div class="comment-share-like">
          
          {.comments?}
            {.if websiteSettings.disqusShortname}
              {@|comment-link}
            {.or}
              {.section publicCommentCount}<a href="{fullUrl}#comments-{id}" class="comment-link">
                {@} Comment{@|pluralize}</a>
              {.or}<a href="{fullUrl}#comments" class="comment-link">Comment</a>
              {.end}
            {.end}
          {.end}

          {@|social-button-inline}

          {@|like-button}

        </div>

        {.section tags}<div class="tags"><p><em>TAGS:</em> {.repeated section @}<a href="{collection.fullUrl}?tag={@|url-encode}" rel="tag">{@}</a>{.alternates with}, {.end}</p></div>{.end}

      </div>
    </footer>

    <hr class="short-line" />

  </article>
{.end}

{.end}

<!--PAGINATION-->
{.section pagination}
<nav class="pagination">
  <ul>
    <li class="previous">{.if pagination.prevPage}<a href="{prevPageUrl}"><span class="fs1 arrow-prev" aria-hidden="true" data-icon="&#x0022;"></span><span class="page-text">Newer</span></a>{.or}<span class="fs1 arrow-prev" aria-hidden="true" data-icon="&#x0022;"></span><span class="page-text">Newer</span>{.end}</li>
    <li class="next">{.if pagination.nextPage}<a href="{nextPageUrl}" class="arrow-chevron-right">Older<span class="fs1 arrow-next" aria-hidden="true" data-icon="&#x0021;"></span></a>{.or}Older<span class="fs1 arrow-next" aria-hidden="true" data-icon="&#x0021;"></span>{.end}</li>
  </ul>
</nav>
{.end}
</div>

